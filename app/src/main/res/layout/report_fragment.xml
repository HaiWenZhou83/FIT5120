<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:text="Statistics"
                android:textColor="@color/green"
                android:textSize="40sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/datePickerStar"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:background="@color/white"
                    android:text="Choose Date"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textStarView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="Starting Date"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textEndView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ending Date: "
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/datePickerEnd"
                    style="?android:spinnerStyle"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="JAN 01 2023"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textLineView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bar Chat"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/bar_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:text="show"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textBarView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pie chart"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/pie_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:text="show"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="523dp"
        android:layout_marginTop="10dp" />

</LinearLayout>